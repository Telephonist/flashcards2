<!DOCTYPE html>
<html>
  <head>
    <title>Флэшкарточкер</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section id="container">
      <header class="clearfix">
        <div class="modal-header">
          <h1><%= link_to "Флэшкарточкер", root_path %></h1>
        </div>
        <ul class="nav nav-tabs">
          <li class="nav-item"><a class="nav-link" <%= link_to "Все карточки", cards_path %></a></li>
          <li class="nav-item"><a class="nav-link" <%= link_to "Добавить карточку", new_card_path%></li>
        </ul>
      </header>
      <%= yield %>
    </section>
  </body>
</html>
